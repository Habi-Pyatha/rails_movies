<%=turbo_frame_tag "review_#{review.id}" do%>
<div class="bg-green-300 mb-2">
  <p><strong>User ID:</strong> <%= review.user_id %></p>
  <p><strong>Comment:</strong> <%= review.comment %></p>
  <p><strong>Rating:</strong> <%= review.rating %></p>
  <%# <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Delete</button> %>

  <%#= link_to "Delete",review, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  <%= button_to "Delete",
      review_path(review),
      method: :delete,
       data: { turbo_method: :delete },
      class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
  %>
</div>
<%end%>